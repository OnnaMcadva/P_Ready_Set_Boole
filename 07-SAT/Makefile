# Text styles
BOLD        = "\033[1m"
UNDERLINE   = "\033[4m"
BLINK       = "\033[5m"

NAME = sat

CC = c++
CPP_FLAGS = -Wall -Werror -Wextra

RM = rm -rf

FILES = ex07

SRCS = $(addsuffix .cpp, $(FILES))

HDRS = $(wildcard *.hpp)

OBJS_DIR = obj
OBJ_DIRS = $(OBJS_DIR)
OBJS = $(addprefix $(OBJS_DIR)/, $(addsuffix .o, $(FILES)))

$(OBJS_DIR)/%.o: %.cpp
	@printf $(GRAY)
	@mkdir -p $(OBJS_DIR)
	$(CC) $(CPP_FLAGS) -c -o $@ $<

