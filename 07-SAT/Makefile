$(NAME): $(OBJS)
	@printf $(GRAY)
	$(CC) $(CPP_FLAGS) -o $(NAME) $(OBJS)
	@printf $(DEF_COLOR)

clean:
	@printf $(YELLOW)
	$(RM) $(OBJS_DIR) $(NAME)
	@printf $(DEF_COLOR)

fclean: clean

re: fclean all

